{{#if addNewPost}}
<h1>New Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="headline">Headline :</label>
      {{input class="textbox" value=headline id="headline"}}
    </div>

    <div class="form-group">
      <label for="author">Author :</label>
      {{input class="textbox" value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="body">Body :</label>
      {{input class="textbox" value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL :</label>
      {{input class="textbox" value=image id="image"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>
</div>
  {{else}}
    <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
