{{#if updatePostForm}}
<h4>Update {{post.title}} post</h4>
   <div>
     <form>
       <div class="form-group">
         <label for="headline">Owner</label>
         {{input value=headline id="headline" placeholder=post.headline}}
       </div>

       <div class="form-group">
         <label for="author">Author</label>
         {{input value=author id="author" placeholder=post.author}}
       </div>

       <div class="form-group">
         <label for="body">Body</label>
         {{input value=body id="body" placeholder=post.body}}
       </div>

       <div class="form-group">
         <label for="image">Image URL</label>
         {{input value=image id="image" placeholder=post.image}}
       </div>

       <button {{action 'update' post}}>Save</button>
     </form>
   </div>
{{else}}
   <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
